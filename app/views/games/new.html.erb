<h1>NEW GAME</h1>
<h2><% @letters %></h2>
<h2><%= @letters.each { |thing| puts thing} %></h2>



<form action="score">
  <input type="text" name="word">
  <input type="hidden" name="letters" value="<%= @letters.join %>" >
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
